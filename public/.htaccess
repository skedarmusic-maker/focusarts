<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1. Force HTTPS (Optional but recommended)
  # RewriteCond %{HTTPS} off
  # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # 2. Remover .html extension from URL (redirect user to clean URL)
  RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
  RewriteRule ^ %1 [R=301,L]

  # 3. Handle Clean URLs: Map /example to /example.html internally
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME}.html -f
  RewriteRule ^(.*)$ $1.html [L]

  # 4. Standard Directory Index to index.html (Already default usually)
  # DirectoryIndex index.html

  # 5. Handle 404s
  ErrorDocument 404 /404.html
</IfModule>
